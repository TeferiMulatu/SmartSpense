@{
	ViewData["Title"] = "Create / Edit";
}
@model SmartSpense.Models.Expense
<h1>Create or Edit Expense</h1>

<form asp-action="CreateEditExpenseForm" asp-controller="Home">
	
	<input hidden type="number" class="form-control" asp-for="Id" placeholder="0" />
	<lable class="mt-4">Value $</lable>
	<input type="number" class="form-control" asp-for="Value" placeholder="0" step="0.1" />
	<lable class="mt-4">Description</lable>
	<input type="text" class="form-control" placeholder="Add A Description" asp-for="Description" />
	<button class="btn btn-primary" type="submit">Ok</button>
</form>